@inject IUserService UserService
@model List<AllChatsViewModel>
@{
	var days = new Dictionary<int, string>
	{
		{ 1, "Яну" },
		{ 2, "Фев" },
		{ 3, "Март" },
		{ 4, "Апр" },
		{ 5, "Май" },
		{ 6, "Юни" },
		{ 7, "Юли" },
		{ 8, "Авг" },
		{ 9, "Сеп" },
		{ 10, "Окт" },
		{ 11, "Ное" },
		{ 12, "Дек" }
	};
	var date = "";
}
<div class="d-flex justify-content-center">
	<!-- Users box-->
	<div class="col-5 px-0 shadow">
		

			<div class="bg-gray px-4 py-2 bg-light">
				<p class="h5 mb-0 py-1">Recent</p>
			</div>

			<div class="messages-box">
				<div class="list-group rounded-0">
					@foreach (var chat in Model)
					{
						var userToName = Guid.Parse(User.GetId()) == chat.UserTo ? UserService.GetUserNameByIdAsync(chat.UserFrom).Result : UserService.GetUserNameByIdAsync(chat.UserTo).Result;
						foreach (var (key,value) in days)
						{
							if (key == chat.StartedOn.Month)
							{
								date = value;
								break;
							}
						}
						<a asp-action="Chat" asp-controller="Chat" asp-route-chatId="@chat.ChatId" class="list-group-item list-group-item-action active text-white rounded-0 border">
							<div class="media">
								<div class="media-body ml-4">
									<h5 class="fw-bold">@userToName</h5>
									<div class="d-flex align-items-center justify-content-between mb-1">
										<h6 class="mb-0">@chat.Name @chat.Message</h6><small class="small font-weight-bold">@chat.StartedOn.Day @date</small>
									</div>
								</div>
							</div>
						</a>
					}
				</div>
			</div>
		
	</div>
</div>