@model List<AllChatsViewModel>
@{
	Dictionary<int, string> days = new Dictionary<int, string>()
	{
		{ 1, "Яну" },
		{ 2, "Фев" },
		{ 3, "Март" },
		{ 4, "Апр" },
		{ 5, "Май" },
		{ 6, "Юни" },
		{ 7, "Юли" },
		{ 8, "Авг" },
		{ 9, "Сеп" },
		{ 10, "Окт" },
		{ 11, "Ное" },
		{ 12, "Дек" },
	};
	string date = "";
}
<div class="row rounded-lg overflow-hidden shadow">
	<!-- Users box-->
	<div class="col-5 px-0">
		<div class="bg-white">

			<div class="bg-gray px-4 py-2 bg-light">
				<p class="h5 mb-0 py-1">Recent</p>
			</div>

			<div class="messages-box">
				<div class="list-group rounded-0">
					@foreach (var message in Model)
					{
						foreach (var (key,value) in days)
						{
							if (key == @message.StartedOn.Month)
							{
								date = value;
								break;
							}
						}
						<a asp-action="Chat" asp-controller="Chat" asp-route-chatId="@message.ChatId" asp-route-user="user" class="list-group-item list-group-item-action active text-white rounded-0">
							<div class="media">
								<div class="media-body ml-4">
									<div class="d-flex align-items-center justify-content-between mb-1">
										<h6 class="mb-0">@message.Name</h6><small class="small font-weight-bold">@message.StartedOn.Day @date</small>
									</div>
									<p class="font-italic mb-0 text-small">@message.Message</p>
								</div>
							</div>
						</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>