@model List<AllChatsViewModel>
<div class="row rounded-lg overflow-hidden shadow">
	<!-- Users box-->
	<div class="col-5 px-0">
		<div class="bg-white">

			<div class="bg-gray px-4 py-2 bg-light">
				<p class="h5 mb-0 py-1">Recent</p>
			</div>

			<div class="messages-box">
				<div class="list-group rounded-0">
					@foreach (var message in Model)
					{
						<a asp-action="GetChat" asp-controller="Messages" asp-route-userFrom="@message.UserFrom" asp-route-userTo="@message.UserTo" class="list-group-item list-group-item-action active text-white rounded-0">
							<div class="media">
								<div class="media-body ml-4">
									<div class="d-flex align-items-center justify-content-between mb-1">
										<h6 class="mb-0">@message.Name</h6><small class="small font-weight-bold">@message.StartedOn.DayOfYear</small>
									</div>
									<p class="font-italic mb-0 text-small">here get last message</p>
								</div>
							</div>
						</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/js/chat.js"></script>