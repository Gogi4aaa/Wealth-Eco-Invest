@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/e48d166edc.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/login.css">
    <title>Login Form</title>
</head>
<body class="background">
    <div class="Main-container">
        <div class="container-login">
            <div class="wrap-login">

                <div class="login-pic">
                    <img src="~/login.png" alt="IMG">
                </div>

				<form class="login-form" id="account" method="post">
					<span class="login-form-title">Sign In</span>

					<div class="wrap-input">
						<input asp-for="Input.Username" type="text" class="input" placeholder="Username" aria-required="true">
						
						<span class="focus-input"></span>
						<span class="symbol-input">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>
					<span asp-validation-for="Input.Username" class="text-danger d-flex justify-content-center"></span>
                    <div class="wrap-input">
						<input asp-for="Input.Password" type="password" class="input" placeholder="Password" aria-required="true">
						
						<span class="focus-input"></span>
						<span class="symbol-input">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>
					<span asp-validation-for="Input.Password" class="text-danger d-flex justify-content-center"></span>
                    <div class="login-form-btn-container">
                        <button class="login-form-btn" type="submit">Sign In</button>
                    </div>

					<div class="text-center p-t-1">
						<span class="txt1">Forgot</span>
						<a asp-page="./ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl" aria-hidden="true" class="txt2"> Password ?</a>
					</div>

					<div asp-validation-summary="ModelOnly" class="text-danger text-center mt-5 list"></div>

                    <div class="text-center p-t-2">
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt2" aria-hidden="true">Sign Up <i class="fa fa-long-arrow-right"></i></a>
                    </div>
					
                </form>
            </div>
        </div>
    </div>

</body>
</html>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}